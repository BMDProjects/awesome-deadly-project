<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.android.opengl.MyGLSurfaceView
        android:id="@+id/gl_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="horizontal">
        <Button
            android:id="@+id/decrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Decrease"
            android:onClick="decrease"
            />
        <Button
            android:id="@+id/Camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Camera"
            android:onClick="Camera"
            />
        <Button
            android:id="@+id/Control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Control"
            android:onClick="Control"/>
        <Button
            android:id="@+id/increase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Increase"
            android:onClick="increase"
          />
        <Button
            android:id="@+id/dolphin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Dolphin"
            android:onClick="dolphinChange"
            />
    </LinearLayout>

</FrameLayout><!-- From: file:/C:/Users/Ben/AndroidStudioProjects/awesome-deadly-project-master/app/src/main/res/layout/main.xml -->